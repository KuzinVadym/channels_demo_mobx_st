{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2017",
    "lib": [
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ]
}
