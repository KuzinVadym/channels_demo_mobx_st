{
  "name": "firebase_mobx_server",
  "version": "1.0.0",
  "description": "Back-end server for tech demo with firebase and mobx",
  "main": "index.js",
  "author": "K2",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=dev node -r ts-node/register ./src/index.ts",
    "dev:watch": "nodemon",
    "build": "tsc",
    "start": "node ./index.js",
    "tslint": "tslint --project tsconfig.json",
    "tslint:fix": "tslint --fix -c ./tslint.json 'src/**/*{.ts,.tsx}'",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.ts\"",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watch --runInBand",
    "test:coverage": "yarn test --collectCoverage --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write"
    }
  },
  "dependencies": {
    "amqplib": "^0.7.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "inversify": "^5.0.5",
    "inversify-binding-decorators": "^4.0.0",
    "pino": "^6.11.1",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.13",
    "@types/pino": "^6.3.4",
    "husky": "^4.3.5",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm": "^7.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.5"
  }
}
